#pragma once

#include "minstdconfig.h"

namespace MINIMAL_STD_NAMESPACE
{
    template <typename T>
    class character_io_interface
    {
    public:
        virtual void putc(T c) = 0;
        virtual T getc(void) = 0;
    };
} // namespace minstd
